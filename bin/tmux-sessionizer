#!/bin/sh

echo $WORK_PATH;
if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(find $DEV/Network $DEV/zoltron_stack $DOTCONF $ENV $RSN $HOME/Desktop/Novall $HOME/Desktop/Novall/Novold -mindepth 1 -maxdepth 1 -type d | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

# si le serveur tmux n'est pas démaré
if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux -f $TMUX_CONF new-session -s $selected_name -c $selected
    exit 0
fi

# si la session demandée n'existe pas
if ! tmux has-session -t $selected_name 2> /dev/null; then
    tmux -f $TMUX_CONF new-session -d -s $selected_name -c $selected
fi

if [[ $TMUX ]]; then
    # si je suis connecté à un client tmux
    tmux -f $TMUX_CONF switch-client -t $selected_name
else
    tmux -f $TMUX_CONF attach -t $selected_name
fi

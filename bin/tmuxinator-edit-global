#!/bin/sh

if { ! test -f "$TMUXINATOR_CONFIG/sample.yml" ;} || test -z "$1"; then 
    exit 1
fi

if test -z "$(find "$TMUXINATOR_CONFIG" -mindepth 1 -maxdepth 1 -type f -iname "$1.yml")"; then
    cp "$TMUXINATOR_CONFIG/sample.yml" "$TMUXINATOR_CONFIG/$1.yml"
fi

editor "$TMUXINATOR_CONFIG/$1.yml"

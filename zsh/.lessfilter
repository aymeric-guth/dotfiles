#! /usr/bin/env sh
# this is a example of .lessfilter, you can change it
mime=$(file -bL --mime-type "$1")
# category=${mime%%/*}
# kind=${mime##*/}
if [ -d "$1" ]; then
	/usr/bin/ls -lha --color=always "$1"
elif [ "$mime" = text/plain ]; then
	/usr/bin/bat --plain --number --paging=never --color=always "$1"
else
  file -b "$1"
fi

#!/bin/sh

HISTSIZE=1000000
SAVEHIST=1000000
export MANWIDTH=999
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

export EDITOR="$DOTFILES/bin/editor"
export MANPAGER="$EDITOR +Man!"
export TMUX_CONFIG="$DOTFILES/tmux/tmux.conf"
export TMUX_TEMPLATE=".tmuxp.yaml"

[ -f "$DOTFILES/.env" ] && . "$DOTFILES/.env"
[ -d "$TOOLZ" ] && prepend_to_path "$TOOLZ/bin" && export MANPATH="$TOOLZ/share/man:$MANPATH"
prepend_to_path "$DOTFILES/bin"

export TMUXP_CONFIGDIR="${TMUXP_CONFIGDIR:-"~/.config/tmuxp"}"

#!/bin/sh

HISTSIZE=1000000
SAVEHIST=1000000
export MANWIDTH=999
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

### USER DEV ENV ###
export DEV="${HOME}/Desktop/dev"
export ENV="${DEV}/env"

### Tools
export GITHUB_REPOS="${HOME}/Desktop/Repos"
export TOOLS="/opt/tools"
PATH=$TOOLS/bin:$PATH
export EDITOR=$DOTCONF/bin/editor
export MANPAGER="$EDITOR +Man!"
export TMUX_CONFIG="$DOTCONF/tmux/tmux.conf"
export TMUXINATOR_CONFIG="$DEV/Network/tmuxinator"
export TMUXP_CONFIGDIR="$DEV/Network/tmuxp"
export TMUX_TEMPLATE=".tmuxp.yaml"

### WORK
export RSN="$HOME/Desktop/Novall/rsn"

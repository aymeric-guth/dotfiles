#!/bin/sh

HISTSIZE=1000000
SAVEHIST=1000000
export MANWIDTH=999
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

[ -f "$DOTFILES/.env" ] && . "$DOTFILES/.env"
[ -d "$TOOLZ" ] && prepend-to-path "$TOOLZ/bin" && export MANPATH="$TOOLZ/share/man:$MANPATH"
prepend-to-path "$DOTFILES/bin"

# if command -v nvim 1> /dev/null; then
#     export EDITOR=""$NEOVIM_OPTS" "$(command -v nvim)""
# elif command -v vim 1> /dev/null; then
#     _editor="$(command -v vim)"
# elif command -v vi 1> /dev/null; then
#     _editor="$(command -v vi)"
# fi
# export VISUAL="$EDITOR"
# export MANPAGER="$EDITOR +Man!"

export EDITOR="$DOTFILES/bin/editor" && export VISUAL="$EDITOR" && export MANPAGER="$EDITOR +Man!"

export TMUX_TEMPLATE=".tmuxp.yaml"
export TMUX_CONFIG="$DOTFILES/tmux/tmux.conf"
export TMUXP_CONFIGDIR="${TMUXP_CONFIGDIR:-"~/.config/tmuxp"}"

GOWORK=
[ -n "$GOWORK" ] && export WORK_PROJECTS="$WORK_PROJECTS" || export WORK_PROJECTS=
export PROJECTS="$PERSONAL_PROJECTS $WORK_PROJECTS"

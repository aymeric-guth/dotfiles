exec --no-startup-id /opt/toolz/bin/obsidian
exec --no-startup-id /snap/bin/jellyfinmediaplayer
exec --no-startup-id /opt/toolz/bin/sonixd
exec --no-startup-id /usr/bin/keepassxc
exec --no-startup-id /usr/bin/discord

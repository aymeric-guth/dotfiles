# Please see https://i3wm.org/docs/userguide.html for a complete reference!
exec_always --no-startup-id sh -c /home/yul/dev/personal/dotfiles/remaps/wayland.setup.monitor.sh

set $mod Mod3

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:SF Mono 10
# font xft:Hack Nerd Font 8

# kill focused window
bindsym $mod+Shift+q kill

# change focus
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+h focus left

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym $mod+r exec swaymsg reload

mode "exit: [l]ock [L]ogout, [r]eboot, [s]hutdown" {
  bindsym l exec swaylock -c 000001 && /usr/bin/xrandr --auto
  bindsym Shift+l exec swaymsg exit
  bindsym r exec systemctl reboot
  bindsym s exec systemctl shutdown
  bindsym Escape mode "default"
  bindsym Return mode "default"
}

input type:keyboard {
    xkb_layout custom
}

input type:pointer {
    natural_scroll enable
}

bindsym $mod+x mode "exit: [l]ock [L]ogout, [r]eboot, [s]hutdown"
# border backgr.text indicator child_border
client.focused #32cd32 #285577 #ffffff #2e9ef4 #32cd32

bindsym $mod+Return exec /usr/bin/alacritty
# bindsym $mod+b exec env GDK_SCALE=2 /usr/bin/firefox
bindsym $mod+b exec /usr/bin/brave --enable-features=UseOzonePlatform --ozone-platform=wayland
bindsym $mod+n exec env ELECTRON_OZONE_PLATFORM_HINT=auto /usr/bin/obsidian

# mplayer
bindsym $mod+Mod1+space exec mpc toggle
bindsym $mod+Mod1+l exec mpc next
bindsym $mod+Mod1+h exec mpc prev
bindsym $mod+Mod1+Shift+l exec mpc seekthrough +10
bindsym $mod+Mod1+Shift+h exec mpc seekthrough -10
bindsym $mod+Mod1+Shift+k exec mpc seekthrough +20
bindsym $mod+Mod1+Shift+j exec mpc seekthrough -20
bindsym $mod+Mod1+r exec mpc repeat
bindsym $mod+control+Mod4+r exec /usr/bin/alacritty -qq --class e2696752-512f-11f0-ae75-ab75b60c01aa --command /usr/bin/rmpc
bindsym $mod+Mod4+c exec /usr/bin/alacritty -qq --class e2696752-512f-11f0-ae75-ab75b60c01aa --command /usr/bin/python3
bindsym $mod+Mod4+p exec /usr/bin/zsh -c -i "$HOME/dev/personal/mplayer/commands/mplayer-status.sh"

# bindsym $mod+Mod4+c exec bluetoothctl connect '20:18:5B:15:68:AD'
# bindsym $mod+Mod4+d exec bluetoothctl disconnect '20:18:5B:15:68:AD'

bindsym $mod+Mod1+k exec mpc volume +5
bindsym $mod+Mod1+j exec mpc volume -5

bindsym $mod+Mod4+shift+space exec /usr/bin/zsh -c -i "$HOME/dev/personal/mplayer/commands/play-override.sh music"
bindsym $mod+Mod4+space exec /usr/bin/zsh -c -i "$HOME/dev/personal/mplayer/commands/play-override.sh music.ready"
bindsym $mod+control+shift+space exec /usr/bin/zsh -c -i "$HOME/dev/personal/mplayer/commands/play-append.sh music"
bindsym $mod+control+space exec /usr/bin/zsh -c -i "$HOME/dev/personal/mplayer/commands/play-append.sh music.ready"

bindsym $mod+Mod4+m exec /usr/bin/zsh -c -i "$HOME/dev/personal/mplayer/commands/move-to-lib.sh"
bindsym $mod+Mod4+shift+m exec /usr/bin/zsh -c -i "$HOME/dev/personal/mplayer/commands/remove-track.sh"

bindsym $mod+Mod4+a exec env XDG_CONFIG_HOME=/home/yul/.config /usr/bin/zsh -c -i '/opt/toolz/bin/chatbox --no-sandbox'

bindsym control+Mod1+Mod4+Shift+r exec /bin/xdotool key Caps_Lock
bindsym control+Mod1+Mod4+r exec /bin/sh -c '/home/yul/dev/personal/dotfiles/remaps/wayland.setup.monitor.sh'

bindsym Mod4+space exec 'env ELECTRON_OZONE_PLATFORM_HINT=auto /usr/bin/rofi -show-icons -dpi 1 -show run drun'

bindsym $mod+e exec env XDG_CURRENT_DESKTOP=KDE KDE_SESSION_VERSION=6 QT_AUTO_SCREEN_SCALE_FACTOR=0 /usr/bin/dolphin

bindsym $mod+Mod1+s exec /usr/bin/zsh -c -i "$HOME/dev/personal/mplayer/commands/playlist-sync-push-to-remote.sh"
bindsym $mod+Mod1+shift+s exec /usr/bin/zsh -c -i "$HOME/dev/personal/mplayer/commands/playlist-sync-pull-to-host.sh"

bindsym $mod+Mod1+Mod4+p exec /usr/bin/zsh -c -i "$HOME/dev/personal/mplayer/commands/playlist-edit.sh"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command i3status
    tray_output primary
}

bindsym Shift+Print exec --no-startup-id maim --select "$HOME/Pictures/$(date +"%Y-%m-%d_%H%M%S").png"
bindsym $mod+Shift+P exec --no-startup-id maim --select "$HOME/Pictures/$(date +"%Y-%m-%d_%H%M%S").png"

# https://www.tuxtips.info/linux/how-to-find-applications-window-class-in-i3-window-manager
# xprop | grep WM_CLASS
for_window [workspace=$ws1] layout stacking
assign [app_id="Alacritty"] $ws1

for_window [workspace=$ws2] layout stacking
assign [app_id="firefox"] $ws2

for_window [workspace=$ws3] layout stacking
assign [app_id="obsidian"] $ws3

for_window [workspace=$ws4] layout stacking
for_window [workspace=$ws5] layout stacking
assign [app_id="discord"] $ws5

for_window [workspace=$ws6] layout stacking
for_window [workspace=$ws7] layout stacking
for_window [workspace=$ws8] layout stacking
for_window [workspace=$ws9] layout stacking
assign [app_id="mpv"] $ws9
assign [app_id="Spotify"] $ws9

for_window [workspace=$ws10] layout stacking
assign [app_id="org.keepassxc.KeePassXC"] $ws10

## floating
for_window [class="Blueman-manager" instance="blueman-manager"] floating enable sticky enable resize set 960 540, move position center

for_window [app_id="org.pulseaudio.pavucontrol"] floating enable, resize set height 512 px, move position center
for_window [app_id="org.kde.dolphin"] floating enable, resize set height 512 px, move position center
# for_window [class="xdg-desktop-portal-gnome" instance="xdg-desktop-portal-gnome"] floating enable sticky enable resize set 960 512, move position center
# for_window [class="Xdg-desktop-portal-gtk" instance="xdg-desktop-portal-gtk"] floating enable sticky enable resize set 960 512, move position center

for_window [app_id="e2696752-512f-11f0-ae75-ab75b60c01aa"] floating enable, resize set height 512 px, move position center
for_window [app_id="479e7be6-597b-11f0-a405-2f94b44adb01"] floating enable, resize set height 512 px, move position center

